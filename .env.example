# ===========================================
# Scrapy Engine Configuration
# ===========================================
# All variables use SCRAPY_ prefix for namespace isolation.
# Some variables (API_KEY, DATABASE_URL, APIFY_API_TOKEN) also accept
# non-prefixed versions for backwards compatibility.

# API Configuration (required)
SCRAPY_API_KEY="your-super-secret-api-key-minimum-32-characters-long"

# Application Settings
SCRAPY_DEBUG="false"
SCRAPY_APP_NAME="Scrapy Engine"
SCRAPY_LOG_LEVEL="INFO"

# Database Configuration
# Also accepts: DATABASE_URL (without prefix)
SCRAPY_DATABASE_URL="sqlite+aiosqlite:///./scrapy.db"

# Callback Configuration
SCRAPY_CALLBACK_TIMEOUT="30"
SCRAPY_CALLBACK_MAX_RETRIES="3"

# Playwright Configuration
SCRAPY_PLAYWRIGHT_HEADLESS="true"
SCRAPY_PLAYWRIGHT_TIMEOUT="30000"

# Apify Configuration (optional - only for social media scraping)
# Also accepts: APIFY_API_TOKEN (without prefix)
SCRAPY_APIFY_API_TOKEN=""

# Rate Limiting (optional)
SCRAPY_RATE_LIMIT_REQUESTS="10"
SCRAPY_RATE_LIMIT_PERIOD="60"
